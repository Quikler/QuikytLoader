<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:QuikytLoader.ViewModels"
             xmlns:ui="using:FluentAvalonia.UI.Controls"
             x:Class="QuikytLoader.Views.SettingsView"
             x:DataType="vm:SettingsViewModel">

    <Design.DataContext>
        <vm:SettingsViewModel/>
    </Design.DataContext>

    <ScrollViewer>
        <StackPanel Spacing="24" Margin="40">

            <!-- Settings Header -->
            <StackPanel Spacing="8">
                <TextBlock Text="Settings"
                           FontSize="32"
                           FontWeight="Bold"
                           Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                <TextBlock Text="Configure your Telegram bot connection"
                           FontSize="14"
                           Foreground="{DynamicResource TextFillColorSecondaryBrush}"/>
            </StackPanel>

            <!-- Telegram Bot Configuration Card -->
            <Border Background="{DynamicResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{DynamicResource CardStrokeColorDefaultBrush}"
                    BorderThickness="1"
                    CornerRadius="8"
                    Padding="24">
                <StackPanel Spacing="24">

                    <!-- Card Title -->
                    <StackPanel Spacing="4">
                        <TextBlock Text="Telegram Bot Configuration"
                                   FontSize="18"
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                        <TextBlock Text="Enter your Telegram bot credentials to send downloaded files"
                                   FontSize="12"
                                   Foreground="{DynamicResource TextFillColorSecondaryBrush}"/>
                    </StackPanel>

                    <!-- Bot Token Input -->
                    <StackPanel Spacing="8">
                        <TextBlock Text="Bot Token"
                                   FontSize="14"
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>

                        <TextBox Text="{Binding BotToken, Mode=TwoWay}"
                                 Watermark="1234567890:ABCdefGHIjklMNOpqrsTUVwxyz"
                                 FontSize="14"
                                 Height="40"
                                 VerticalContentAlignment="Center"/>

                        <TextBlock TextWrapping="Wrap"
                                   FontSize="12"
                                   Foreground="{DynamicResource TextFillColorTertiaryBrush}">
                            <Run Text="Get your bot token from"/>
                            <Run Text="@BotFather" FontWeight="SemiBold"/>
                            <Run Text="on Telegram"/>
                        </TextBlock>
                    </StackPanel>

                    <!-- Chat ID Input -->
                    <StackPanel Spacing="8">
                        <TextBlock Text="Chat ID"
                                   FontSize="14"
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>

                        <TextBox Text="{Binding ChatId, Mode=TwoWay}"
                                 Watermark="123456789"
                                 FontSize="14"
                                 Height="40"
                                 VerticalContentAlignment="Center"/>

                        <TextBlock TextWrapping="Wrap"
                                   FontSize="12"
                                   Foreground="{DynamicResource TextFillColorTertiaryBrush}">
                            <Run Text="Your Telegram chat ID. Use"/>
                            <Run Text="@userinfobot" FontWeight="SemiBold"/>
                            <Run Text="to find your chat ID"/>
                        </TextBlock>
                    </StackPanel>

                    <!-- Save Button -->
                    <Button Content="Save Settings"
                            HorizontalAlignment="Left"
                            Height="40"
                            Padding="24,0"
                            FontSize="14"
                            FontWeight="SemiBold"
                            Classes="accent">
                        <Button.CommandParameter>
                            <Binding Path="."/>
                        </Button.CommandParameter>
                    </Button>

                </StackPanel>
            </Border>

            <!-- Help Card -->
            <Border Background="{DynamicResource AccentFillColorDefaultBrush}"
                    BorderThickness="0"
                    CornerRadius="8"
                    Padding="20"
                    Opacity="0.1">
                <StackPanel Spacing="12">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <ui:SymbolIcon Symbol="Help"
                                       FontSize="20"
                                       Foreground="{DynamicResource AccentFillColorDefaultBrush}"/>
                        <TextBlock Text="How to set up your Telegram bot"
                                   FontSize="16"
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource TextFillColorPrimaryBrush}"/>
                    </StackPanel>

                    <StackPanel Spacing="8" Margin="28,0,0,0">
                        <TextBlock TextWrapping="Wrap"
                                   FontSize="13"
                                   Foreground="{DynamicResource TextFillColorSecondaryBrush}">
                            <Run Text="1. Open Telegram and search for"/>
                            <Run Text="@BotFather" FontWeight="SemiBold"/>
                        </TextBlock>

                        <TextBlock Text="2. Send /newbot and follow the instructions"
                                   TextWrapping="Wrap"
                                   FontSize="13"
                                   Foreground="{DynamicResource TextFillColorSecondaryBrush}"/>

                        <TextBlock Text="3. Copy the bot token and paste it above"
                                   TextWrapping="Wrap"
                                   FontSize="13"
                                   Foreground="{DynamicResource TextFillColorSecondaryBrush}"/>

                        <TextBlock TextWrapping="Wrap"
                                   FontSize="13"
                                   Foreground="{DynamicResource TextFillColorSecondaryBrush}">
                            <Run Text="4. Search for"/>
                            <Run Text="@userinfobot" FontWeight="SemiBold"/>
                            <Run Text="to get your chat ID"/>
                        </TextBlock>
                    </StackPanel>
                </StackPanel>
            </Border>

        </StackPanel>
    </ScrollViewer>

</UserControl>
